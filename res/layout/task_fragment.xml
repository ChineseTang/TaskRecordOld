<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 主题 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="主题"
                    android:textColor="#FF0000"
                    android:textSize="20sp" />
                <!--
                 <EditText
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="请输入主题"
                android:background="@null"
                android:layout_weight="3"
			    android:layout_gravity="left"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
                -->

                <EditText
                    android:id="@+id/topic"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:background="@null"
                    android:hint="请输入主题"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:layout_margin="2dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内容"
                    android:textColor="#FF0000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:background="@null"
                    android:hint="请输入内容"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:layout_margin="2dp"
                android:background="#000000" />
            <!-- 介绍时间 -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="结束"
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/endtime"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_margin="2dp"
            android:background="#000000" />
        <!-- 通知时间 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知"
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnernotetime"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:entries="@array/spingarrtime"
                android:paddingBottom="0dp"
                android:paddingTop="0dp" />
        </LinearLayout>
        <!-- 重要性选择 -->
        <!-- 频率选择 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_margin="2dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="频率"
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnernote"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:entries="@array/spingarr"
                android:paddingBottom="0dp"
                android:paddingTop="0dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_margin="2dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重要"
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/importRadioGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/veryimportant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:drawableLeft="@drawable/radiobutton_bg"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:text="很重要"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/important"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/radiobutton_bg"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:text="重要"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/just"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/radiobutton_bg"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:text="一般"
                    android:textColor="#999999"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>
        <!-- 通知选择 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_margin="2dp"
            android:background="#000000" />

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领域"
                android:textColor="#FF0000"
                android:textSize="20sp" />
			 <Spinner
                android:id="@+id/spinnerclass"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:entries="@array/spingclass"
                android:paddingBottom="0dp"
                android:paddingTop="0dp" />
           <!--  <ToggleButton
                android:id="@+id/choosenot"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/selector_butn_toggle"
                android:checked="true"
                android:textOff=""
                android:textOn="" /> -->
        </LinearLayout> 
        <!-- 方式选择 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_margin="2dp"
            android:background="#000000" /> 

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方式"
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/chooseway"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/radiobutton_bg"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:text="闹钟"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@drawable/radiobutton_bg"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:text="通知条"
                    android:textColor="#999999"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>
        <!-- 方式选择 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_margin="2dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/submittask"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/buttonbg"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>