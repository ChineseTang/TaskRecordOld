<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndexActivity" >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- the main content view -->

        <RelativeLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/indexpage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/homebg"
                android:orientation="vertical" >
			<!-- 第一行的两个button按钮 -->
                <LinearLayout
                    android:id="@+id/indexbutton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/change"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_drawer" />

                    <Button
                        android:id="@+id/search"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="240dp"
                        android:background="@drawable/ic_search" />
                </LinearLayout>
			<!-- 第二行的显示当前日期 -->
                <LinearLayout
                    android:id="@+id/indexdate"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/indexdatetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/homedate"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
		<!-- 下面是显示日历控件 -->
            <RelativeLayout
                android:id="@+id/indexcalender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/indexpage"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingTop="3dp" >
		<LinearLayout 
		    android:id="@+id/operator"
		    android:layout_width="match_parent"
            android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/left_arrow"
                    android:contentDescription="@null" />
		     <TextView
                        android:id="@+id/tv_today"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:background="#FFD700"
                        android:gravity="center"
                        android:text="@string/now"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
		        <TextView
                        android:id="@+id/date_text"
                        style="@style/myschedule_current_month_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="#93C73C"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/week_text"
                        style="@style/myschedule_current_month_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="#93C73C"
                        android:textSize="20sp" />
		       <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_arrow"
                    android:contentDescription="@null" />
		</LinearLayout>
