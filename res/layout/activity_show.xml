<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/showpage"
    android:background="@drawable/homebg"   
    android:orientation="vertical" >
       <LinearLayout
                android:id="@+id/showinpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/homebg"
                android:orientation="vertical" >

                <!-- 第一行的两个button按钮 -->

                <LinearLayout
                    android:id="@+id/indexbutton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/change"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_drawer" />

                    <Button
                        android:id="@+id/search"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="240dp"
                        android:background="@drawable/ic_search" />
                </LinearLayout>
                <!-- 第二行的显示当前日期 -->

                <LinearLayout
                    android:id="@+id/indexdate"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/indexdatetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/homedate"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                </LinearLayout>

                <!-- 第三行显示添加任务按钮 -->

                <LinearLayout
                    android:id="@+id/indexaddbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/addtaskbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/addtask" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/operator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/left_arrow"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/tv_today"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:background="#FFD700"
                        android:gravity="center"
                        android:text="@string/now"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/date_text"
                        style="@style/myschedule_current_month_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="#93C73C"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/week_text"
                        style="@style/myschedule_current_month_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="#93C73C"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/right_arrow"
                        android:contentDescription="@null" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/datashow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <com.myview.WeekDayView
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <com.myview.MonthDateView
                        android:id="@+id/monthDateView"
                        android:layout_width="match_parent"
                        android:layout_height="160sp" />

                    <ListView
                        android:id="@+id/tasklist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff" >
                    </ListView>
                </LinearLayout>
            </LinearLayout>

</LinearLayout>
